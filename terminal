#turn rpi into router with ch9200#
sudo apt-get update
sudo apt-get install bc dnsmasq hostapd bridge-utils libcap-dev pppoeconf
cd ~
cd rpf-linux-kernel
git reset --hard 6820d0cbec64cfee481b961833feffec8880111e
make mrproper
make bcm2709_defconfig
curl -O https://raw.githubusercontent.com/raspberrypi/firmware/stable/extra/Module7.symvers
mv Module7.symvers Module.symvers
make modules_prepare
sudo ln -s /home/pi/rpf-linux-kernel/ /lib/modules/$(uname -r)/build

cd ~
git clone https://github.com/xor-function/usb-ethernet-adapter
cd usb-ethernet-adapter
make
sudo make install
sudo modprobe ch9200

#teamviewr#
cd ~
curl -O https://dl.tvcdn.de/download/linux/version_12x/teamviewer-host_12.1.83885_armhf.deb
sudo apt install ./teamviewer-host_12.1.83885_armhf.deb
sudo teamviewer info
sudo teamviewer passwd raspberry
sudo teamviewer setup
sudo raspi-config

